{% macro categorycount(pagename) %}
    {% set count = 0 %}
    {% for category in collections.resources %}
        {% if category.data.pagename == pagename %}
            {{ category.data.myentries | length + category.data.externalentries | length }}
        {% endif %}
    {% endfor %}
{% endmacro %}

