{% include "partials/header.njk" %}

<div class="row">
    <div class="col-md-3">
        <div class="row">
            <div class="col-md-2 subheaderblock" style="background-color:var(--color4-light);">
            </div>
            <div class="col-md-10">
            <h2>Reading in 2021</h2>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-8">
            <ul>
                    {% for item in reading %}
                        {% if item.display != "none" %}
                            <li><i>{{ item.title }}</i> ({{ item.year }}) by {{ item.author }}
                            <div style="margin:0; background:repeating-linear-gradient(-45deg, var(--color2-light),var(--color2-light) 4px, #ffffff 4px, #ffffff 8px); width:100%; border:1px solid var(--color2);">
                        <div style="text-align: right; padding: 4px 12px 4px 24px; width: {{ item.progress[item.progress.length-1].percent }}%; background-color: var(--color2); font-family:'Helvetica', 'Helvetica Neue', 'Arial', sans-serif; font-size: smaller;">{{ item.progress[item.progress.length-1].percent }}%</div>
                    </div><br>
                    </li>
                        {% endif %}
                    {% endfor %} 
            </ul>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="row">
            <div class="col-md-2 subheaderblock" style="background-color:var(--color4-light);">
            </div>
            <div class="col-md-10">
            <h2>Minutes spent on selected hobbies and skills in 2021</h2>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-8">
                <div class="row justify-content-between">
                    <div class="col-md-offset-*" style="background-color:var(--color1-light); padding: 16px; width:30%; min-height:100px; text-align: center; box-shadow: 8px 8px var(--color1);">
                    <p></p>
                        <h3>450</h3>
                        <p>coding</p>
                        <figcaption>(That's about 113 minutes per day.)</figcaption>
                    </div>
                    <div class="col-md-offset-*" style="background-color:var(--color2-light); padding: 16px; width:30%; min-height:100px; text-align: center; box-shadow: 8px 8px var(--color2);">
                        <p></p>
                            <h3>290</h3>
                            <p>music</p>
                            <figcaption>(That's 4 hours and 50 minutes.)</figcaption>
                    </div>
                    <div class="col-md-offset-*" style="background-color:var(--color3-light); padding: 16px; width:30%; min-height:100px; text-align: center; box-shadow: 8px 8px var(--color3);">
                    <p></p>
                        <h3>0</h3>
                        <p>electronics</p>
                        <figcaption>(I'll get started any day now...)</figcaption>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>
</div>


{% include "partials/footer.njk" %}